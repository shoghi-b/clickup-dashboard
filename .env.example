# Database
# For local development with SQLite (legacy):
# DATABASE_URL="file:./dev.db"

# For production with Supabase PostgreSQL:
# Session pooler (Port 5432) - Use for local development and migrations
DATABASE_URL="postgresql://postgres.PROJECT_REF:PASSWORD@aws-1-REGION.pooler.supabase.com:5432/postgres"

# Direct URL - Required for Prisma migrations in serverless environments
DIRECT_URL="postgresql://postgres.PROJECT_REF:PASSWORD@aws-1-REGION.pooler.supabase.com:5432/postgres"

# ClickUp API Configuration
# Get your API token from: https://app.clickup.com/settings/apps
CLICKUP_API_TOKEN="your_clickup_api_token_here"
CLICKUP_TEAM_ID="your_team_id_here"

# Application Settings
NEXT_PUBLIC_APP_NAME="ClickUp Timesheet Analytics"
NEXT_PUBLIC_DEFAULT_HOURS_PER_DAY="8"
NEXT_PUBLIC_DEFAULT_HOURS_PER_WEEK="40"

